<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/dp_13"
        android:gravity="end">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#4978ff" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="end">
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/dp_10"
                android:height="@dimen/dp_20" />
            <corners
                android:bottomLeftRadius="@dimen/dp_10"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"
                android:topLeftRadius="@dimen/dp_10" />
            <solid android:color="#f0f0fa" />
        </shape>
    </item>
    <item android:right="@dimen/dp_10">
        <shape android:shape="rectangle">
            <solid android:color="#4978ff" />
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>
</layer-list>