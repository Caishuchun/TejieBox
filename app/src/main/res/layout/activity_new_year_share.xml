<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewYearShareActivity">

    <LinearLayout
        android:id="@+id/ll_newYearShare_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F0A0D"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/new_year_top" />

            <View
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#A0fde9bc" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:letterSpacing="0.09"
            android:text="特戒祝您 兔年快乐 大吉大利"
            android:textColor="#fde9bc"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_202"
                android:layout_height="@dimen/dp_202"
                android:background="@drawable/bg_qr_line">

                <com.fortune.tejiebox.widget.RoundImageView
                    android:id="@+id/iv_newYearShare_qrCode"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp_3"
                    app:radius="@dimen/dp_3"
                    app:type="round" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="长按识别下载，瓜分千万充值"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_79" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="注意事项一: "
                android:textColor="#fbd464"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="被邀请的玩家下载和注册都需要在同一个网络下"
                android:textColor="#fde9bc"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_newYearShare_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注意事项二: "
                android:textColor="#fbd464"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请多个同WIF的玩家，需要前一个登录之后再邀请下一个"
                android:textColor="#fde9bc"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_newYearShare_back"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_newYear_share_save"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/bg_new_year_get_btn"
            android:gravity="center"
            android:text="保存至相册"
            android:textColor="#ee1212 "
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_90"
            android:text="保存该图片到相册，微信或者QQ发给好友邀请"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>