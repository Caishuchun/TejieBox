<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_card"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_dialog_smsCode_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black_1A241F"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:id="@+id/et_dialog_smsCode_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:autofillHints="no"
        android:background="@null"
        android:gravity="center"
        android:hint="请输入短信验证码"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:textColor="#FF5F60FF"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@drawable/line_open_service" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_smsCode_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dialog_smsCode_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="确认"
            android:textColor="#5F60FF"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>