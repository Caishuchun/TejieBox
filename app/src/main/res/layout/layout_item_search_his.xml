<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_search_his"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="1"
            android:drawableStart="@mipmap/history_black"
            android:drawablePadding="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="#0A0422"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_item_search_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/delete_search" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/line_tab_bottom" />

</LinearLayout>