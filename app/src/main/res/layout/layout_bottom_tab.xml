<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="#80FFFFFF"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@drawable/line_tab_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_bottomTab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottomTab_home"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/icon_home_unselect" />

            <TextView
                android:id="@+id/tv_bottomTab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#4DFFFFFF"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_bottomTab_playing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottomTab_playing"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/icon_playing_unselect" />

            <TextView
                android:id="@+id/tv_bottomTab_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在玩"
                android:textColor="#4DFFFFFF"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_bottomTab_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bottomTab_like"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/icon_like_unselect" />

            <TextView
                android:id="@+id/tv_bottomTab_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#4DFFFFFF"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_bottomTab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24">

                <ImageView
                    android:id="@+id/iv_bottomTab_me"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/icon_me_unselect" />

                <ImageView
                    android:id="@+id/iv_bottomTab_me_point"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/point_red"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_bottomTab_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="#4DFFFFFF"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>