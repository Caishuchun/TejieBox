<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dialog_integral_color"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:layout_centerInParent="true"
        android:src="@mipmap/color3" />

    <LinearLayout
        android:id="@+id/ll_dialog_integral_root"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜获得"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/money" />

        <TextView
            android:id="@+id/tv_dialog_integral_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="积分 +20"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/line_tab_bottom" />

        <TextView
            android:id="@+id/tv_dialog_integral_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="确定"
            android:textColor="#5F60FF"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>