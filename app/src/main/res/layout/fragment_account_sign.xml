<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_account_sign_back"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_48"
        android:src="@mipmap/login_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:text="欢迎注册使用"
        android:textColor="#0E0631"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_account_sign_title"
        android:layout_width="@dimen/dp_173"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/app_title" />

    <TextView
        android:id="@+id/tv_account_sign_account_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_79"
        android:layout_marginEnd="@dimen/dp_32"
        android:text="√ 你说什么都是对的"
        android:textColor="@color/green_2EC8AC"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_account_sign_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@drawable/bg_phone_enter"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="请输入注册账号"
        android:inputType="textVisiblePassword"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="@dimen/dp_10"
        android:textColor="#0A0422"
        android:textColorHint="#CAC9CE"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_account_sign_pass_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_32"
        android:text="√ 你说什么都是对的"
        android:textColor="@color/green_2EC8AC"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@drawable/bg_phone_enter"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_account_sign_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入注册密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="@dimen/dp_10"
            android:textColor="#0A0422"
            android:textColorHint="#CAC9CE"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_account_sign_pass"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/pass_show" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_account_sign_rePass_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_32"
        android:text="√ 你说什么都是对的"
        android:textColor="@color/green_2EC8AC"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@drawable/bg_phone_enter"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_account_sign_rePass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入注册密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="@dimen/dp_10"
            android:textColor="#0A0422"
            android:textColorHint="#CAC9CE"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_account_sign_rePass"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/pass_show" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_account_sign_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@drawable/bg_btn"
        android:clickable="false"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/sp_16" />

</LinearLayout>