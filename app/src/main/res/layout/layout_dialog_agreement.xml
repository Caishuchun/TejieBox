<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_card"
    android:minWidth="@dimen/dp_150"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请阅读并同意以下条款"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_dialog_agreement_cancel"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_12"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_agreement_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_15"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#1A1A1A"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_agreement_cancel"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_start_btn_big"
            android:gravity="center"
            android:text="拒绝并退出应用"
            android:visibility="gone"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_dialog_agreement_next"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="同意并继续"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


</LinearLayout>