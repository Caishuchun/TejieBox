<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".activity.GameDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_FFFFFF"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_detail_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_249"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail_pic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_202"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_48"
                    android:background="@drawable/line_open_service" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_detail_pic_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_47"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_04000000"
                    android:scrollbars="none" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/bg_gray_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.fortune.tejiebox.widget.RoundImageView
                            android:id="@+id/iv_detail_icon"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:scaleType="centerCrop"
                            app:radius="@dimen/dp_10"
                            app:type="round" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_detail_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="游戏名"
                                android:textColor="#0A0422"
                                android:textSize="@dimen/sp_20"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_detail_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:text="简介"
                                android:textColor="#534F64"
                                android:textSize="@dimen/sp_12" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.zhy.view.flowlayout.FlowLayout
                                    android:id="@+id/fl_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_detail_like"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <ImageView
                                android:id="@+id/iv_detail_like"
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@mipmap/detail_collect_un" />

                            <TextView
                                android:id="@+id/tv_detail_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="收藏"
                                android:textColor="#534F64"
                                android:textSize="@dimen/sp_12"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@drawable/line_open_service" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@mipmap/detail_open" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日开服"
                        android:textColor="#0A0422"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    app:cardBackgroundColor="@color/white_FFFFFF"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_20">

                        <LinearLayout
                            android:id="@+id/ll_detail_open_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_detail_open_date1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="03月22日五区"
                                android:textColor="@color/black_1A241F"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_detail_open_date2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="03月22日五区"
                                android:textColor="@color/black_1A241F"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_detail_open_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/line_detail_open_start1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_3"
                                android:layout_weight="1"
                                android:background="@color/gray_C4C4C4" />

                            <ImageView
                                android:id="@+id/iv_detail_open_time1"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:src="@mipmap/detail_time_un" />

                            <View
                                android:id="@+id/line_detail_open_end1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_3"
                                android:layout_weight="1"
                                android:background="@color/gray_C4C4C4" />

                            <View
                                android:id="@+id/line_detail_open_start2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_3"
                                android:layout_weight="1"
                                android:background="@color/gray_C4C4C4" />

                            <ImageView
                                android:id="@+id/iv_detail_open_time2"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:src="@mipmap/detail_time_un" />

                            <View
                                android:id="@+id/line_detail_open_end2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_3"
                                android:layout_weight="1"
                                android:background="@color/gray_C4C4C4" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_detail_open_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_detail_open_time1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_detail_open_clock1"
                                    android:layout_width="@dimen/dp_13"
                                    android:layout_height="@dimen/dp_13"
                                    android:layout_marginEnd="@dimen/dp_2"
                                    android:src="@mipmap/detail_clock_un" />

                                <TextView
                                    android:id="@+id/tv_detail_open_time1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="今日 15:00"
                                    android:textColor="@color/gray_C4C4C4"
                                    android:textSize="@dimen/sp_12"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_detail_open_time2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_detail_open_clock2"
                                    android:layout_width="@dimen/dp_13"
                                    android:layout_height="@dimen/dp_13"
                                    android:layout_marginEnd="@dimen/dp_2"
                                    android:src="@mipmap/detail_clock_un" />

                                <TextView
                                    android:id="@+id/tv_detail_open_time2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="今日 15:00"
                                    android:textColor="@color/gray_C4C4C4"
                                    android:textSize="@dimen/sp_12"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_detail_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:background="@drawable/line_open_service" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:src="@mipmap/detail_gift" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特戒盒子专属礼包"
                            android:textColor="#0A0422"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="进入本游戏领取礼包"
                            android:textColor="#5F60FF"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        app:cardBackgroundColor="@color/white_FFFFFF"
                        app:cardCornerRadius="@dimen/dp_10"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingEnd="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="礼包码: "
                                    android:textColor="#0A0422"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:id="@+id/tv_detail_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#fd7c02"
                                    android:textSize="@dimen/sp_24"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_detail_codeMsg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="礼包奖励"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:background="@drawable/line_open_service" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:src="@mipmap/detail_info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游戏详情"
                            android:textColor="#0A0422"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_detail_days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="#5F60FF"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_detail_strategy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="游戏教程以及攻略"
                        android:textColor="@color/black_1A241F"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_60" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_28"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_detail_back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/bg_unload_shade"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_FFFFFF"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_detail_integral"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_weight="1"
                android:background="@drawable/bg_start_btn_circle_yellow"
                android:gravity="center"
                android:text="免费充值"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_detail_start"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_36"
                android:layout_weight="2"
                android:background="@drawable/bg_start_btn_circle"
                android:gravity="center"
                android:text="启动游戏"
                android:textColor="@color/white_FFFFFF"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_C4C4C4"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="低性能模拟器可能存在兼容性问题,推荐使用夜神模拟器+Android9配置"
            android:textColor="@color/red_FB6767"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
