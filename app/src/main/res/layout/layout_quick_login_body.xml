<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login4ali_back"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_42"
            android:src="@mipmap/login_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/login_welcome"
            android:textColor="#0E0631"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_login4ali_title"
            android:layout_width="@dimen/dp_173"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/app_title" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200" />

        <LinearLayout
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login4ali_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="手机号登录"
                android:textStyle="bold"
                android:textColor="#990A0422" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_login4ali_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                android:text="账号登录"
                android:textColor="#990A0422" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>