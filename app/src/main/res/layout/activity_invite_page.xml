<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InvitePageActivity">

    <LinearLayout
        android:id="@+id/ll_invitePage_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:scaleType="fitXY"
            android:src="@mipmap/app_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:text="邀请码"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_invitePage_InviteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.5"
            android:text="A8F9F5"
            android:textColor="@color/ps_color_blue"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="@dimen/dp_202"
            android:layout_height="@dimen/dp_202"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_qr_line">

            <com.fortune.tejiebox.widget.RoundImageView
                android:id="@+id/iv_invitePage_qrCode"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                app:radius="@dimen/dp_3"
                app:type="round" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_invitePage_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="长按识别二维码下载"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_invitePage_tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="下载后需要注册登录, 并绑定邀请码才可使用特戒盒子"
            android:textColor="@color/black_1A241F"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_invitePage_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <ImageView
                android:id="@+id/iv_invitePage_back"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/back_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="分享邀请"
                android:textColor="#0A0422"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/line_open_service"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_invitePage_save"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_start_btn_big"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="分享"
            android:textColor="@color/white_FFFFFF"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="注意事项一: "
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="将图片分享给好友, 可长按识别二维码下载特戒盒子"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_newYearShare_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注意事项二: "
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友需要填写您的专属邀请码后, 才算邀请注册成功"
                android:textColor="@color/black_1A241F"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>